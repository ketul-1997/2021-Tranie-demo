<odoo>
    <data>

        <record id="book_issue_form" model="ir.ui.view">
            <field name="name">lms.book.issue.form</field>
            <field name="model">lms.book.issue</field>
            <field name="arch" type="xml">
                <form string="Books Issue Form">
                    <sheet>
                        <group col="4">
                            <field name="book_id"/>
                            <field name="qty_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="book_issue_tree" model="ir.ui.view">
            <field name="name">lms.book.issue.tree</field>
            <field name="model">lms.book.issue</field>
            <field name="arch" type="xml">
                <tree string="Books Issue Tree">
                    <field name="book_id"/>
                    <field name="qty_id"/>
                    <button string="Issue Book" type="object" name="IssueBook"/>
                </tree>
            </field>
        </record>

        <record id="book_issue_search" model="ir.ui.view">
            <field name="name">lms.book.issue.search</field>
            <field name="model">lms.book.issue</field>
            <field name="arch" type="xml">
                <search string="Books Issue Search">
                    <field name="book_id"/>
                    <field name="qty_id"/>
                </search>
            </field>
        </record>




        <record id="action_book_issue" model="ir.actions.act_window">
            <field name="name">Issue Book</field>
            <field name="res_model">lms.book.issue</field>
            <field name="view_mode">tree,form,search</field>
        </record>
    </data>
</odoo>
