<odoo>
    <data>

        <record id="view_book_records_form" model="ir.ui.view">
            <field name="name">lms.books.form</field>
            <field name="model">lms.books</field>
            <field name="arch" type="xml">
                <form string="Books Form">
                    <header>
                        <button string="Issue Book" type="object" name="IssueBook"/>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="book_type"/>
                            <field name="qty"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_book_records_tree" model="ir.ui.view">
            <field name="name">lms.books.tree</field>
            <field name="model">lms.books</field>
            <field name="arch" type="xml">
                <tree string="Books Tree">
                    <field name="name"/>
                    <field name="book_type"/>
                    <field name="qty"/>
                </tree>
            </field>
        </record>


        <record id="view_book_records_search" model="ir.ui.view">
            <field name="name">lms.books.search</field>
            <field name="model">lms.books</field>
            <field name="arch" type="xml">
                <search string="Books Search">
                    <field name="name"/>
                    <field name="book_type"/>
                    <field name="qty"/>
                </search>
            </field>
        </record>

        <record id="action_book" model="ir.actions.act_window">
            <field name="name">Book</field>
            <field name="res_model">lms.books</field>
            <field name="view_mode">tree,form,search</field>
        </record>
    </data>
</odoo>